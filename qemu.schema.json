{
    "$schema": "http://json-schema.org/schema#",
    "title": "Libvirt port-forwarding hook configuration schema",
    "type" : "object",
    "patternProperties": {
        "^[A-Za-z_\\-]": {
            "type": "object",
            "properties": {
                "interface": { "type": "string" },
                "private_ip": { "type": "string" },
                "public_ip": { "type": "string" },
                "port_map": {
                    "type": "object",
                    "patternProperties": {
                        "^tcp|udp|icmp": {
                            "type": "array",
                            "items": {
                                "type": "array"
                            },
                            "minItems": 1,
                            "uniqueItems": true
                        }
                    },
                    "additionalProperties": false,
                    "minProperties": 1
                }
            },
            "required": ["private_ip"],
            "additionalProperties": false
        }
    },
    "minProperties": 1
}
